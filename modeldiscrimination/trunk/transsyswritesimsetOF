#!/usr/bin/python

import StringIO
import getopt
import sys
import os
import transsys
import trsysmodis
import random


spec = None
rndseed = 1
noise = 0.0
tracefile = None
tp_tracefile = None
all_factors = False

optlist, args = getopt.getopt(sys.argv[1:], 's:o:fN:lvh')

for opt, par in optlist :
  if opt == '-h' :
    print 'Usage: transsyswritesimsetOF [options] transsys_program expr_data_prefix track_file '
    print '-s <int>: Random seed'
    print '-N <int>: Noise'
    print '-o <str>: specify spec file'
    print '-f: get expression values for each factor'
    print '-h: print this help and exit'
    sys.exit()
  elif opt == '-o' :
    spec = par
  elif opt == '-s' :
    rndseed = int(par)
  elif opt == '-e' :
    equilibration_length = int(par)
  elif opt == '-N' :
    noise = float(par)
  elif opt == '-f' :
    all_factors = True
  else :
    raise StandardError, 'unhandled option "%s"' % opt

rng = random.Random(rndseed)

if len(args) > 0 :
  infile = open(args[0], 'r')
else :
  infile = sys.stdin
if len(args) > 1 :
  outfile = args[1]
if len(args) > 2 :
  if args[2] != 'None' :
    tracefile = open(args[2], 'w')
if len(args) > 3 :
  if args[3] != 'None' :
    tp_tracefile = open(args[3], 'w')

specfile = open(spec, 'r')
o = trsysmodis.EmpiricalObjectiveFunctionParser(specfile)
objective_function = o.parse_objectivespec()
#print objective_function
#sys.exit()

transsys_program = transsys.TranssysProgramParser(infile).parse()
if all_factors :
  e = objective_function.get_simulated_set(transsys_program, tracefile, tp_tracefile, transsys_program.factor_names())
else :
  e = objective_function.get_simulated_set(transsys_program, tracefile, tp_tracefile)

if noise > 0.0 :
  if rndseed is not None :
    e.write_noisy_simulated_set(outfile, rng, noise)
else :
  e.write_simulated_set(outfile)
